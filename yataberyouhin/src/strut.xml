<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
"http://struts.apache.org/dtds/struts-2.3.dtd">

<!-- Strutsの詳細設定 -->
<struts>
	<constant name="struts.devMode" value="true" />
	<!-- 対象のpackageを設定 -->
	<package name="com.internousdev.yataberyouhin.action" extends="struts-default">

<!-- MyPageAction -->
<action name="MyPageAction" class="com.internousdev.yataberyouhin.action.MyPageAction" method="execute">
<result name="success">myPage.jsp</result>
</action>

<!-- PurchaseAction -->
<action name="PurchaseAction" class="com.internousdev.yataberyouhin.action.PurchaseAction" method="execute">
<result name="success">purchase.jsp</result>
</action>
</package>
</struts>
